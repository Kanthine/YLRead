        function formatConfirmHtml(nexturl, appurl) {
            var r1 = Math.random();
            var btn1 = '<span class="btn active" onclick="window.location.href=\''+appurl+'\'">打开</span>';
            var btn2 = '<span class="btn" onclick="window.location.href=\''+nexturl+'\'">取消</span>';
            var btns = r1 > 0.5 ? btn1 + btn2 : btn2 + btn1;

            var html = '<style> .confirmbox-wp { display: none; position: fixed; top: 50%; left: 0; -webkit-transform: translateY(-50%); transform: translateY(-50%); width: 88%; margin: 0 6%; border-radius: 5px; overflow: hidden; z-index: 9999999; background: #000310; background-image: repeating-linear-gradient(-45deg, rgba(255, 255, 255, .1), rgba(255, 255, 255, .1) 15px, transparent 0, transparent 30px);}.confirmbox-wp * { display: block;} .confirmbox-wp .main {  padding: 15px; font-size: 18px; line-height: 26px; color: #fff;} .confirmbox-wp .btns { overflow: hidden; margin: 0 10px 15px;} .confirmbox-wp .btns .btn { padding: 6px 30px; border: 1px solid #fff; border-radius: 5px; color: #fff; float: right; margin-left: 10px;} .confirmbox-wp .btns .btn.active { background: #673AB7;} </style> <div class="confirmbox-wp" id="ConfirmModal"> <main class="main">是否打开免费小说App 继续免费阅读《完美世界》全文</main> <div class="btns">  '+btns+' </div> </div>';

            html = html.replaceAll('confirmbox-wp', getRandomName(4, 6));

            var tagArr = html.match(/<\w+\s/ig);
            for (var i in tagArr) {
                var tag = tagArr[i];
                var tagEnd = '</' + tag.slice(1,-1) + '>';
                var newTag = getRandomName(4, 6, 'tag');
                html = html.replaceAll(tag, '<' + newTag + ' ');
                html = html.replaceAll(tagEnd, '</' + newTag + '>');
            }
            document.write(html);
        }
